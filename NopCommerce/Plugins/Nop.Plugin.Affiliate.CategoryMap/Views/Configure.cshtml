@using Nop.Web.Framework;
@{
    Layout = "";
    Html.SetActiveMenuItemSystemName("Affiliate.Plugins.CategoryMap.Configure");
}
@model Nop.Plugin.Affiliate.CategoryMap.Models.ConfigurationModel

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-4">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.AdditionalCostPercent)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.AdditionalCostPercent)
                                @Html.ValidationMessageFor(model => model.AdditionalCostPercent)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.ShippingDescriptions)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.ShippingDescriptions)
                                @Html.ValidationMessageFor(model => model.ShippingDescriptions)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                &nbsp;
                            </div>
                            <div class="col-md-9">
                                <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />

                                <input type="button" class="btn bg-red" onclick="UpdatePrice()" value="Áp dụng cho tất cả sản phẩm" />
                            </div>
                        </div>
                    </div>
                </div>
             
            </div>
        </div>
    </div>
    <script>
        function UpdatePrice() {
            if (!window.confirm("Bạn có muốn áp dụng cho tất cả sản phẩm"))
                return false;
            $.ajax({
                type: "POST",
                url: "@Url.Action("UpdatePrice","ProductMapping",new { area="admin"})",
                success: function (data) {

                }
            })
        }

    </script>
}